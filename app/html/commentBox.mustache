<div class="commentBox">
    <div class="titleBox">
        <button type="button" class="close" aria-hidden="true">&times;</button>
    </div>
    <div class="actionBox">
        <ul class="commentList">
            {{#comments}}
                {{{.}}}
            {{/comments}}
        </ul>
        <form class="form-inline" role="form">
            <div class="form-group">
                <input class="form-control" type="text" id="commentForm" placeholder="Your comments" />
            </div>
            <div class="form-group">
                <button class="btn btn-default" id="commentBtn" type="button">Add</button>
            </div>
        </form>
    </div>
</div>

